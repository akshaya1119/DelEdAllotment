<head>
    <link rel="stylesheet" href="~/css/admitcard.css" />
</head>

@if (Model.Registration == null)
{
    <h2>No registration found!</h2>
}
else
{
    <div class="admit-card hindi">

        <!-- Header -->
        <table class="header-table" style="width:100%; margin-bottom:5px;">
            <tbody>
            <tr>
                <td style="width:17%;">
                    <img src="/Images/ubse_white.jpg" style="max-width:130px; width:100%; height:auto;"/>
                </td>
                <td style="vertical-align:top; padding-top:20px; text-align:center; line-height:35px;">
                    <div class="header-title" style="font-size: 30px; font-weight: 400">उत्तराखण्ड विद्यालयी शिक्षा परिषद्, रामनगर (नैनीताल)</div>
                        <div class="header-subtitle" style="font-size: 22px; font-weight: bold">द्विवर्षीय डी.एल.एड. प्रशिक्षण हेतु प्रवेश परीक्षा 2025-26</div>
                        <div class="header-main" style="font-size: 20px; font-weight: bold">प्रवेश पत्र (Admit Card)</div>
                </td>
                <td style="width:17%; text-align:right;">
                    <img src="/Images/qr.png" style="max-width:130px; width:100%; height:auto;" />
                </td>
            </tr>
    </tbody>
        </table>

        <!-- Candidate Info -->
        <table style="border-collapse:collapse; width:100%;" border="1">
            <tr>
                <td style="width: 12%;">अनुक्रमांक</td>
                <td style="width: 28%; font-size: 28px;"><b>@Model.Registration.RollNumber</b></td>
                <td style="width:4%; text-align: center;">लिंग</td>
                <td style="width:10%; text-align:center;">जन्मतिथि</td>
                <td style="width: 4%; text-align:center;">श्रेणी</td>
                <td style="width:9%; text-align:center;">क्षैतिज श्रेणी</td>
                <td rowspan="4" style="text-align:center; padding:0; width:16%;">
                    <img src="@($"/static/{System.IO.Path.GetFileName(Model.Registration.ImagePath)}")"
                         style="max-width:140px; width:100%; height:auto;"
                         alt="Photo" />
                    <br />
                    <img src="@($"/static/{System.IO.Path.GetFileName(Model.Registration.SignaturePath)}")"
                         style="max-width:160px; width:100%; height:auto;"
                         alt="Signature" />
                </td>
            </tr>
            <tr>
                <td>अभ्यर्थी का नाम</td>
                <td><b>@Model.Registration.Name</b></td>
                <td style="text-align:center;"><b>@Model.Registration.Gender</b></td>
                <td style="text-align:center;"><b>@Model.Registration.DOB</b></td>
                <td style="text-align:center;"><b>@Model.Registration.Category</b></td>
                <td style="text-align:center;"><b>@Model.Registration.SubCategory</b></td>
            </tr>
            <tr>
                <td>पिता का नाम</td>
                <td><b>@Model.Registration.FName</b></td>
                <td colspan="3" style="text-align:center;">प्रशिक्षण हेतु आवेदित वर्ग</td>

                <td style="text-align:center;">दिव्यांगता का प्रकार</td>
            </tr>
            <tr>
                <td>फोटो पहचान पत्र</td>
                <td><b>@Model.Registration.PhotoId</b></td>
                <td colspan="3" style="text-align:center;"><b>D.El.Ed.</b></td>
                <td style="text-align:center;"><b>@Model.Registration.PhType</b></td>
            </tr>

            <tr>
                <td colspan="5" class = "hind-regular" style="padding:5px;">
                    परीक्षा शहर का नाम: <b>@Model.CityName</b><br />
                    परीक्षा केंद्र का नाम: <b>@Model.CentreName</b>
                </td>
                <td colspan="2" style="text-align:center; line-height:25px;">
                    परीक्षा तिथि एवं समय<br />
                    <b>30/11/2024 (शनिवार)<br />प्रातः 10:00 से अपरान्ह 12:30 तक</b>
                </td>
            </tr>

            <tr>
                <td>पत्र व्यवहार का पता</td>
                <td colspan="4">@Model.Registration.Address</td>
                <td colspan="2" style="text-align:center;">
                    <img src="/Images/Sign1.jpg" style="max-width:100px; width:100%; height:auto;" />
                    <br />
                    सचिव<br />
                    उत्तराखण्ड विद्यालयी शिक्षा परिषद्,<br />रामनगर (नैनीताल)
                </td>
            </tr>
        </table>

        <!-- Instructions -->
        <table class="instructions-table" style="width:100%; margin-top:20px; line-height:28px;">
            <tr><td colspan="2" style="text-align:center; font-size:28px;">:: महत्वपूर्ण निर्देश ::</td></tr>
            
                    <tr>
                        <td>1.</td>
                        <td>
                            अभ्यर्थी परीक्षा तिथि को परीक्षा प्रारम्भ होने से 1 घंटा पूर्व निर्धारित परीक्षा केंद्र पर उपस्थित हो जायें |
                            परीक्षा आरम्भ होने के 30 मिनट पश्चात् किसी भी अभ्यर्थी को परीक्षा कक्ष में प्रवेश करने की अनुमति नहीं दी जायेगी |
                            परीक्षा में बैठने के लिए प्रवेश-पत्र अपने साथ लाना अनिवार्य है |
                            बिना प्रवेश पत्र किसी भी अभ्यर्थी को परीक्षा में सम्मिलित नहीं किया जायेगा |
                            प्रवेश-पत्र को भविष्य में रिकार्ड के लिए सुरक्षित रखें |
                        </td>
                    </tr>
             

            <tr><td>2.</td><td>ओ. एम. आर. उत्तर पत्रक भरने के लिये काली/नीली स्याही के बॉल पॉइंट पेन का ही प्रयोग करें | पेन्सिल का प्रयोग वर्जित है |</td></tr>
            <tr>
                <td>3.</td>
                <td>
                    अभ्यर्थी को परीक्षा हॉल/कक्ष के भीतर प्रवेश-पत्र, परिचय पत्र (आई.डी.) और काले/नीले बॉल प्वाइंट पेन के अतिरिक्त किसी भी प्रकार की पाठ्य सामग्री,
                    मोबाइल, पेजर, कैलकुलेटर, डिजिटल घड़ी, इलेक्ट्रानिक उपकरण (गैजेट), मुद्रित/लिखित सामग्री, कागज के टुकड़े आदि को ले जाने की अनुमति नहीं है |
                </td>
            </tr>
            <tr>
                <td>4.</td>
                <td>
                    कोरोना वायरस <b>(COVID-19)</b> संक्रमण रोकथाम के दृष्टिगत परीक्षा केन्द्र पर दिये गये निर्देशों का अक्षरशः पालन करना अभ्यर्थी को अनिवार्य होगा |
                </td>
            </tr>
            <tr><td>5.</td><td>परीक्षार्थी स्वच्छता एवं सफाई का विशेष ध्यान रखें |</td></tr>
            <tr>
                <td>6.</td>
                <td>
                    परीक्षा कक्ष में किसी भी प्रकार का वार्तालाप, इशारे या व्यवधान को दुर्व्यवहार माना जायेगा |
                    यदि कोई अभ्यर्थी अनुचित तरीकों का प्रयोग करता हुआ अथवा किसी अन्य के स्थान पर परीक्षा देता हुआ पाया गया
                    तो उसका अभ्यर्थन निरस्त करते हुए उसे अपराध की प्रकृति के अनुरूप स्थायी रूप से अथवा एक निर्दिष्ट अवधि के लिए
                    परीक्षा देने से वंचित कर दिया जायेगा |
                </td>
            </tr>
            <tr>
                <td>7.</td>
                <td>
                    परीक्षा में अभ्यर्थी को उनके द्वारा ऑनलाइन आवेदन पत्र में अंकित तथ्यों के आधार पर सम्मिलित कराया जा रहा है
                    तथा उनका अभ्यर्थन नितान्त औपबंधिक है |
                    अभ्यर्थी द्वारा गलत जानकारी/तथ्यों के आधार पर परीक्षा में सम्मिलित होना/प्रमाण-पत्र प्राप्त करने का संज्ञान होने पर
                    उसका अभ्यर्थन/परीक्षाफल निरस्त कर दिया जायेगा और उसके विरुद्ध वैधानिक कार्यवाही की जायेगी |
                </td>
            </tr>
            <tr>
                <td>8.</td>
                <td>
                    यदि किसी अभ्यर्थी का प्रवेश पत्र बिना फोटो के है तो वह परीक्षा केंद्र पर अपने 2 नवीनतम पासपोर्ट
                    साइज फोटो एवं ऑनलाइन आवेदन पत्र की फोटोप्रति एवं प्रवेश पत्र में अंकित फोटोयुक्त पहचान पत्र प्रस्तुत करेगा |
                </td>
            </tr>
            <tr>
                <td>9.</td>
                <td>
                    <b>प्रत्येक अभ्यर्थी को परीक्षा केंद्र पर अपने साथ अपनी पहचान हेतु प्रवेश-पत्र के साथ प्रवेश पत्र में अंकित फोटोयुक्त पहचान पत्र लाना अनिवार्य है |</b>
                </td>
            </tr>
            <tr>
                <td>10.</td>
                <td>
                    जिन अभ्यर्थियों को माननीय उच्च न्यायालय उत्तराखण्ड, नैनीताल के आदेशानुसार परीक्षा में सम्मिलित कराया जा रहा है,
                    उनका परीक्षाफल माननीय उच्च न्यायालय उत्तराखण्ड नैनीताल के अंतिम निर्णय के अधीन रहेगा |
                </td>
            </tr>

            <tr>
                <td colspan="2">
                    <div class=""
                         style="width: 200px; text-align: center; font-weight: bold; line-height: 20px; float: right;">
                        <img src="/Images/Sign1.jpg"
                             style="width: 120px; height: auto; margin: 5px auto; display: block;" />
                        <br />
                        सचिव<br />
                        उत्तराखण्ड विद्यालयी शिक्षा परिषद्,<br />
                        रामनगर (नैनीताल)
                    </div>
                </td>
            </tr>

        </table>

    </div>
